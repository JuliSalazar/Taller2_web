<div class="product {{#if options}}product--with-options{{/if}}">
  <header class="product__header">
    <h2 class="product__title">{{ title }}</h2>
  </header>

  <section class="producto__section">
    <img src="{{ img }}" alt="">
    <p class="product__description">
      {{ description }}
    </p>
  </section>

  {{#if options}}
    <h3>Tiene opciones disponibles</h3>
    <ul>
      {{#each options}}
        <li>{{ this }}</li>
      {{/each}}
    </ul>
  {{else}}
    <h3>No tiene opciones disponibles</h3>
  {{/if}}

  {{log variations}}

  {{#if variations}}
    <h3>Tiene variaciones</h3>
    <ul>
      {{#each variations}}
        <li> {{@index}}  {{ name }} <strong>{{ price }}</strong></li>
      {{/each}}
    </ul>
  {{/if}}

  {{#unless freeShipping}}
    <h3>No tiene env√≠o gratis :(</h3>
  {{/unless}}
</div>
